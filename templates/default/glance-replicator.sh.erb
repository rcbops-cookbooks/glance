#set -x
declare -a processes
processes=($(pgrep -f glance-replicator))
source /root/openrc
if [ ${#processes[@]} -eq 1 ]; then
    token=$(keystone token-get | sed -En "/ id/ s/^.* ([a-f0-9]{3,}) .*$/\1/p")
    python /var/lib/glance/glance-replicator.py -t $token check_filesystem_store <%= @glance_ip %>:<%= @glance_port %> /var/lib/glance/images
else
    echo "glance-replicator already running - not re-running"
fi
